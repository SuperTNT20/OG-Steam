"resource/layout/steamrootdialog_gamespage_list.layout"
{
	controls
	{
		"GamesList"
		{
			tabposition=1
		}
	}

	colors
	{
		ListPanel.PostSectionLeading	12
	}

  styles
  {
	
	GameColumnHeaderFavorites {
	}

	ListPanelInterior {
		inset = "0 0 8 0"
		bgcolor="none"
		render
		{
			1="fill( x0, y0, x1, y0 + 1, BorderDark )"  // top
			2="fill( x0, y1 - 1, x1, y1, BorderBright )"  // bottom
			3="fill( x0, y0, x0 + 1, y1, BorderDark )"  // left
			4="fill( x1 - 1, y0, x1, y1, BorderBright )"  // right
		}
	}


	CGamesListFavoritesToggle {
		image = "skins/OFGSremake/Graphics/fav_addTo"
	}
	
	CGamesListFavoritesToggle:hover {
		image = "skins/OFGSremake/Graphics/fav_addTo_ovr"
	}

	CGamesListFavoritesToggle:selected {
		image = "skins/OFGSremake/Graphics/fav_remove"
	}
	
	CGamesListFavoritesToggle:selected:hover {
		image = "skins/OFGSremake/Graphics/fav_remove_ovr"
	}


  }	

	
	layout
	{
		// content pages
		place { control="GamesList" 		width=max height=max margin-left=0 margin-top=0 }

	}

}
